<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/nav_graph"
  app:startDestination="@id/mainFragment">

  <fragment android:id="@+id/mainFragment"
    android:name="ru.rizz.slideshow.main.MainFragment"
    android:label="Слайд-шоу"
    tools:layout="@layout/fragment_main">
    <action android:id="@+id/action_mainFragment_to_settingsFragment"
      app:destination="@id/settingsFragment"/>
  </fragment>

  <fragment android:id="@+id/settingsFragment"
    android:name="ru.rizz.slideshow.settings.SettingsFragment"
    android:label="Настройки"
    tools:layout="@layout/fragment_settings"
    >
    <action android:id="@+id/action_settingsFragment_to_mainFragment"
      app:destination="@id/mainFragment"/>
  </fragment>
</navigation>